@model SimsTracker.Models.Sim
@{
    ViewData["Title"] = "Create";
}
@{

}
<div class="all-content">
    <h1>@ViewBag.Item</h1>

    <h1>Create a sim</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="firstName" class="control-label"></label>
                    <input asp-for="firstName" class="form-control" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastName" class="control-label"></label>
                    <input asp-for="lastName" class="form-control" />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="age" class="control-label"></label>
                    <input asp-for="age" class="form-control" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lifeStage" class="control-label"></label>
                    <select asp-for="lifeStage" class="form-control" id="age">
                        <option></option> 
                        <option>Baby</option> 
                        <option>Toddler</option> 
                        <option>Child</option> 
                        <option>Teen</option> 
                        <option>Young Adult</option> 
                        <option>Adult</option> 
                        <option>Elder</option> 
                    </select>
                    <span asp-validation-for="lifeStage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="gender" class="control-label"></label>
                    <select asp-for="gender" class="form-control">
                        <option></option> 
                        <option>Male</option> 
                        <option>Female</option> 
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="aspiration" class="control-label"></label>
                    <select asp-for="aspiration" class="form-control" id="1">
                        <option></option> 
                        <option>Fortune</option> 
                        <option>Knowledge</option> 
                        <option>Family</option>
                        <option>Romance</option>
                        <option>Popularity</option>
                        <option>Pleasure</option>
                        <option>Grow Up</option> 
                    </select>
                    <span asp-validation-for="aspiration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="hoodName" class="control-label"></label>
                    <input asp-for="hoodName" class="form-control" />
                    <span asp-validation-for="hoodName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="status" class="control-label"></label>
                    <select asp-for="status" class="form-control" id="1">
                        <option></option> 
                        <option>Alive</option> 
                        <option>Deceased</option> 
                    </select>
                    <span asp-validation-for="status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="notes" class="control-label"></label>
                    <input asp-for="notes" class="form-control" />
                    <span asp-validation-for="notes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="form-group">
                </div>
            </form>
        </div>
    </div>

    <div>
        @*<a asp-action="Index" asp-route-hoodName="" class="back">Back to List</a>*@
        <a href="javascript:history.go(-1)" class="back">Back to List </a>
    </div>
</div>
<script>

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


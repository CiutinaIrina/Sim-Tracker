<div class="all-content">

    <h1>Search for your Sim</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ShowSearchResults">
                <div class="form-group">
                    <label for="firstName" class="control-label">Search by First Name</label>
                    <input name="firstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="lastName" class="control-label">Search by Last Name</label>
                    <input name="lastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="lifeStage" class="control-label">Search by Life Stage</label>
                    <select name="lifeStage" class="form-control" id="age">
                        <option></option> 
                        <option value="Baby">Baby</option> 
                        <option value="Toddler">Toddler</option> 
                        <option value="Child">Child</option> 
                        <option value="Teen">Teen</option> 
                        <option value="Young Adult">Young Adult</option> 
                        <option value="Adult">Adult</option> 
                        <option value="Elder">Elder</option> 
                    </select>
                </div>
                <div class="form-group">
                    <label for="aspiration" class="control-label">Search by Aspiration</label>
                    <select name="aspiration" class="form-control" id="1">
                            <option></option> 
                            <option>Fortune</option> 
                            <option>Knowledge</option> 
                            <option>Family</option>
                            <option>Romance</option>
                            <option>Popularity</option>
                            <option>Pleasure</option>
                            <option>Grow Up</option> 
                    </select>
                </div>
                <div class="form-group">
                    <label for="gender" class="control-label">Search by Gender</label>
                    <select name="gender" class="form-control">
                            <option></option> 
                            <option>Male</option> 
                            <option>Female</option> 
                    </select>
                </div>
                <div class="form-group">
                    <label for="status" class="control-label">Search by Status</label>
                    <select name="status" class="form-control" id="1">
                            <option></option> 
                            <option>Alive</option> 
                            <option>Deceased</option> 
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="javascript:history.go(-1)" class="back">Back to List</a>
    </div>

</div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            
        </form>
        <a asp-action="Index" class="back" asp-route-hoodName="@Model.hoodName">Back to List</a>
    </div>

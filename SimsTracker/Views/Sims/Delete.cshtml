@model SimsTracker.Models.Sim

@{
    ViewData["Title"] = "Delete";
}
<div class="all-content">
    <h1>Are you sure you want to delete @(Model.firstName + " " + Model.lastName)</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.firstName)
